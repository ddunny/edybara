{
  "name": "@edybara/core",
  "description": "rich text editor",
  "version": "1.0.0",
  "license": "MIT",
  "homepage": "https://edybara.com",
  "keywords": [
    "wysiwyg",
    "text editor",
    "prosemirror"
  ],
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/winetree94"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/winetree94/edybara",
    "directory": "packages/bold"
  },
  "scripts": {
    "start": "tsup --watch --tsconfig tsconfig.build.json",
    "clean:dist": "rimraf dist",
    "clean:dependency": "rimraf node_modules",
    "build": "yarn clean:dist && yarn build:ts && yarn build:style",
    "build:ts": "tsup --tsconfig tsconfig.build.json",
    "build:style": "sass styles:styles",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix"
  },
  "files": [
    "src",
    "dist"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles/gapcursor.css": {
      "import": "./styles/gapcursor.css",
      "require": "./styles/gapcursor.css"
    },
    "./styles/core.css": {
      "import": "./styles/core.css",
      "require": "./styles/core.css"
    }
  },
  "dependencies": {
    "@edybara/pm": "^1.0.0"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "rimraf": "^5.0.0",
    "sass": "^1.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
