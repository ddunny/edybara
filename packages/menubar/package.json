{
  "name": "@edybara/menubar",
  "description": "rich text editor",
  "version": "1.0.0",
  "license": "MIT",
  "homepage": "https://edybara.com",
  "keywords": [
    "wysiwyg",
    "text editor",
    "prosemirror"
  ],
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/winetree94"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/winetree94/edybara",
    "directory": "packages/bold"
  },
  "scripts": {
    "start": "tsup --watch --tsconfig tsconfig.build.json",
    "clean:dist": "rimraf dist",
    "clean:dependency": "rimraf node_modules",
    "build": "npm run clean:dist && npm run build:ts && npm run build:style",
    "build:ts": "tsup --tsconfig tsconfig.build.json",
    "build:style": "sass styles:styles"
  },
  "files": [
    "src",
    "dist"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "dependencies": {
    "@edybara/blockquote": "*",
    "@edybara/command": "*",
    "@edybara/core": "*",
    "@edybara/flat-list": "*",
    "@edybara/flat-task-list": "*",
    "@edybara/font-family": "*",
    "@edybara/heading": "*",
    "@edybara/image": "*",
    "@edybara/link": "*",
    "@edybara/mention": "*",
    "@edybara/paragraph": "*",
    "@edybara/pm": "*",
    "@edybara/tables": "*",
    "@edybara/text-color": "*",
    "@edybara/ui": "*",
    "emoji-datasource": ">=15.0.0",
    "htm": ">=3.0.0",
    "preact": ">=10.0.0",
    "remixicon": ">=3.0.0"
  },
  "devDependencies": {
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "tsup": "^8.0.1",
    "typescript": "^5.2.2"
  }
}
