{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./src",
    "sourceMap": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@edybara-editor/emoji": ["../../emoji/src/index.ts"],
      "@edybara-editor/heading": ["../../heading/src/index.ts"],
      "@edybara-editor/command": ["../../command/src/index.ts"],
      "@edybara-editor/hr": ["../../hr/src/index.ts"],
      "@edybara-editor/paragraph": ["../../paragraph/src/index.ts"],
      "@edybara-editor/flat-list": ["../../flat-list/src/index.ts"],
      "@edybara-editor/flat-task-list": ["../../flat-task-list/src/index.ts"],
      "@edybara-editor/tables": ["../../tables/src/index.ts"],
      "@edybara-editor/image": ["../../image/src/index.ts"],
      "@edybara-editor/link": ["../../link/src/index.ts"],
      "@edybara-editor/core": ["../../core/src/index.ts"],
      "@edybara-editor/codeblock": ["../../codeblock/src/index.ts"],
      "@edybara-editor/blockquote": ["../../blockquote/src/index.ts"],
      "@edybara-editor/bold": ["../../bold/src/index.ts"],
      "@edybara-editor/code": ["../../code/src/index.ts"],
      "@edybara-editor/font-family": ["../../font-family/src/index.ts"],
      "@edybara-editor/italic": ["../../italic/src/index.ts"],
      "@edybara-editor/strikethrough": ["../../strikethrough/src/index.ts"],
      "@edybara-editor/subscript": ["../../subscript/src/index.ts"],
      "@edybara-editor/superscript": ["../../superscript/src/index.ts"],
      "@edybara-editor/text-color": ["../../text-color/src/index.ts"],
      "@edybara-editor/underline": ["../../underline/src/index.ts"],
      "@edybara-editor/mention": ["../../mention/src/index.ts"],
      "@edybara-editor/ui": ["../../ui/src/index.ts"],
      "@edybara-editor/menubar": ["../../menubar/src/index.ts"],
      "@edybara-editor/preset": ["../../preset/src/index.ts"]
    }
  },
  "include": ["src"]
}
